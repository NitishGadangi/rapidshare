<h1> New File Upload </h1>

<%= form_for :document, url: user_documents_path, :html => {:multipart => true}  do |f| %>
  <%= render 'shared/errors', object: @document %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, required: true %>
  </p>

  <p>
    <%= f.label :user_file %><br>
    <%= f.file_field :doc, required: true %>
  </p>

  <p>
    <%= f.label :is_private %><br>
    <%= f.check_box :is_private %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', user_documents_path %>

<h1>All public files</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
  </tr>
  <% @documents.each do |document| %>
    <tr>
      <td><%= document.user_id %></td>
      <td><%= document.title %></td>
      <td><%= link_to 'Show', user_document_path(document.user_id, document.id) %></td>
      <td><%= link_to 'Download', document.doc.url %></td>
      </td>
    </tr>
  <% end %>
</table>
<br>
<% if user_signed_in? %>
  <%= link_to 'Back', user_path(current_user) %>
<% end %>

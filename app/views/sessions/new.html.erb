<%= form_for(:session, url: login_path) do |f| %>
  <% if @user && @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited from logging
        in:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg.to_s %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.email_field :email, :placeholder => "Email", required: true %><br>
  <%= f.password_field :password, :placeholder => "Password", require: true %><br>
  <%= f.submit "Log in", class: "btn-submit" %>
<% end %>
